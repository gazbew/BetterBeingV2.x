# ========================================
# Better Being Development Environment
# ========================================

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/betterbeing_dev"
REDIS_URL="redis://localhost:6379"

# API Configuration
NODE_ENV="development"
PORT=3001
VITE_API_URL="http://localhost:3001/api"

# Security Configuration
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-key-min-32-chars-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# Authentication Configuration (Supabase)
SUPABASE_URL="your-supabase-project-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Email Configuration (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@betterbeing.co.za"
SENDGRID_FROM_NAME="Better Being"

# Payment Gateway Configuration
# PayFast Configuration
PAYFAST_MERCHANT_ID="your-payfast-merchant-id"
PAYFAST_MERCHANT_KEY="your-payfast-merchant-key"
PAYFAST_PASSPHRASE="your-payfast-passphrase"
PAYFAST_SANDBOX=true

# Zapper Configuration
ZAPPER_MERCHANT_ID="your-zapper-merchant-id"
ZAPPER_API_KEY="your-zapper-api-key"
ZAPPER_SANDBOX=true

# PayJustNow Configuration
PAYJUSTNOW_MERCHANT_ID="your-payjustnow-merchant-id"
PAYJUSTNOW_API_KEY="your-payjustnow-api-key"
PAYJUSTNOW_SANDBOX=true

# File Upload Configuration
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Analytics Configuration
GOOGLE_ANALYTICS_ID="GA4-XXXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Monitoring Configuration
SENTRY_DSN="your-sentry-dsn"
LOG_LEVEL="debug"

# CORS Configuration
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET="your-session-secret-min-32-chars"
SESSION_MAX_AGE=86400000

# Development Tools
ENABLE_API_DOCS=true
ENABLE_CORS_LOGGING=true
ENABLE_QUERY_LOGGING=true