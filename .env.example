# ========================================
# Better Being Environment Template
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# API Configuration
NODE_ENV="development"
PORT=3003
VITE_API_URL="http://localhost:3003/api"

# Security Configuration (GENERATE STRONG RANDOM VALUES)
JWT_SECRET="your-super-strong-jwt-secret-minimum-64-characters-long"
JWT_REFRESH_SECRET="your-super-strong-refresh-secret-minimum-64-characters-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# Email Configuration
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="Your App Name"

# Payment Gateway Configuration
# Paystack Configuration
PAYSTACK_SECRET_KEY="your-paystack-secret-key"
PAYSTACK_PUBLIC_KEY="your-paystack-public-key"
PAYSTACK_WEBHOOK_SECRET="your-paystack-webhook-secret"
PAYSTACK_SANDBOX=true

# Legacy Payment Gateways (if needed)
PAYFAST_MERCHANT_ID="your-payfast-merchant-id"
PAYFAST_MERCHANT_KEY="your-payfast-merchant-key"
PAYFAST_PASSPHRASE="your-payfast-passphrase"
PAYFAST_SANDBOX=true

ZAPPER_MERCHANT_ID="your-zapper-merchant-id"
ZAPPER_API_KEY="your-zapper-api-key"
ZAPPER_SANDBOX=true

PAYJUSTNOW_MERCHANT_ID="your-payjustnow-merchant-id"
PAYJUSTNOW_API_KEY="your-payjustnow-api-key"
PAYJUSTNOW_SANDBOX=true

# CORS Configuration
CORS_ORIGIN="http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration (GENERATE STRONG RANDOM VALUE)
SESSION_SECRET="your-super-strong-session-secret-minimum-64-characters-long"
SESSION_MAX_AGE=86400000

# Development Tools
ENABLE_API_DOCS=true
ENABLE_CORS_LOGGING=true
ENABLE_QUERY_LOGGING=true
LOG_LEVEL="debug"